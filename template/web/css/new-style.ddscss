.restaurant_info {
  padding-top: 3rem;
  color: white;
  width: 80%;
  margin-inline: auto;
  .col-md-3 {
  text-align: center;
  padding: 3rem 0 2.3rem;
  position: relative;
  img{
  width: 54px;
  margin-bottom:10px;
  border-bottom: 2px solid rgb(255, 252, 252);
  padding-bottom: 30px;
  filter: brightness(0) saturate(100%) invert(100%) sepia(100%) saturate(0%) hue-rotate(56deg) brightness(108%) contrast(101%);
}
&:not(:last-child):before{
  position: absolute;
  width: 2px;
  height: 160px;
  background-color: white;
  content: "";
  right: -1px;
  z-index: 1
}
}
.col-md-3:nth-child(odd) {
  background: #314619;
}
.col-md-3:nth-child(even) {
  background: #3E5622;
}
h3{
  font-size: 23px;
  font-weight: 700;
}
}


.testimonials-section .text{
  max-height:130px;
