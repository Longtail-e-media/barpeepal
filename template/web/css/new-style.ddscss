  padding-right:30px;
}

.book_date{
  position: relative;
  &::before{
      position:absolute;
      background: url(../assets/images/barpeepal/calendar.png) center no-repeat;
        content: "";
        width: 50px;
        height: 50px;
      right: -8px;
      top:50%;
      transform: translateY(-50%);

  }
}
